<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Planim.SignIn">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Iniciar Sesion!"
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
            <Editor Placeholder="Usuario" AutomationId="Usuario"/>
            <Entry Placeholder="Contraseña" IsPassword="True" AutomationId="Contraseña"/>
            <Button Text="Iniciar Sesion" Clicked="Iniciar" > </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>